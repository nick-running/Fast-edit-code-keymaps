<keymap version="1" name="Default copy" parent="$default">
  <action id="Macro.fast end with comma and space">
    <keyboard-shortcut first-keystroke="shift ctrl comma" />
  </action>
  <action id="SplitHorizontally">
    <keyboard-shortcut first-keystroke="shift ctrl alt minus" />
  </action>
  <action id="SplitVertically">
    <keyboard-shortcut first-keystroke="shift ctrl alt back_slash" />
  </action>
</keymap>